{
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "schemaVersion": 2,
    "services": [
        {
            "image": "ghcr.io/toomy1992/wealthfolio-mcp:v0.1.2",
            "name": "wealthfolio-mcp",
            "isMain": true,
            "internalPort": 8000,
            "capDrop": [
                "ALL"
            ],
            "environment": [
                {
                    "key": "API_KEY",
                    "value": "${WEALTHFOLIO_MCP_API_KEY}"
                },
                {
                    "key": "API_BASE_URL",
                    "value": "${WEALTHFOLIO_MCP_API_BASE_URL}"
                },
                {
                    "key": "asset_filters",
                    "value": "${WEALTHFOLIO_MCP_ASSET_FILTERS:-stocks,crypto}"
                },
                {
                    "key": "TZ",
                    "value": "${TZ}"
                }
            ],
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data",
                    "containerPath": "/app/data"
                }
            ],
            "healthCheck": {
                "test": "curl -f http://localhost:8000/docs || exit 1",
                "interval": "30s",
                "timeout": "10s",
                "retries": 3
            }
        }
    ]
}