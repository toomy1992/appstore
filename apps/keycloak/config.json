{
    "$schema": "https://schemas.runtipi.io/v2/app-info.json",
    "id": "keycloak",
    "available": true,
    "port": 8080,
    "name": "Keycloak",
    "description": "Open source identity and access management solution. Keycloak provides user federation, strong authentication, user management, fine-grained authorization, and more.",
    "version": "26.5.1",
    "tipi_version": 1,
    "short_desc": "Open source authentication server",
    "author": "Keycloak Team",
    "source": "https://github.com/keycloak/keycloak",
    "website": "https://www.keycloak.org",
    "categories": [
        "security",
        "featured"
    ],
    "form_fields": [
        {
            "type": "text",
            "label": "Admin Username",
            "hint": "Initial admin user for Keycloak management console",
            "required": true,
            "env_variable": "KEYCLOAK_ADMIN_USERNAME",
            "default": "admin",
            "placeholder": "admin"
        },
        {
            "type": "password",
            "label": "Admin Password",
            "hint": "Secure password for admin account. Change this immediately in production",
            "required": true,
            "env_variable": "KEYCLOAK_ADMIN_PASSWORD",
            "placeholder": "Choose a strong password"
        },
        {
            "type": "text",
            "label": "Database Host",
            "hint": "PostgreSQL database hostname (internal service name)",
            "required": true,
            "env_variable": "KEYCLOAK_DB_HOST",
            "default": "keycloak-db",
            "placeholder": "keycloak-db"
        },
        {
            "type": "number",
            "label": "Database Port",
            "hint": "PostgreSQL database port",
            "required": true,
            "env_variable": "KEYCLOAK_DB_PORT",
            "default": 5432,
            "min": 1,
            "max": 65535
        },
        {
            "type": "text",
            "label": "Database Name",
            "hint": "PostgreSQL database name",
            "required": true,
            "env_variable": "KEYCLOAK_DB_NAME",
            "default": "keycloak",
            "placeholder": "keycloak"
        },
        {
            "type": "text",
            "label": "Database Username",
            "hint": "PostgreSQL database user",
            "required": true,
            "env_variable": "KEYCLOAK_DB_USERNAME",
            "default": "keycloak",
            "placeholder": "keycloak"
        },
        {
            "type": "password",
            "label": "Database Password",
            "hint": "PostgreSQL database password. Use a strong password",
            "required": true,
            "env_variable": "KEYCLOAK_DB_PASSWORD",
            "placeholder": "Choose a strong password"
        },
        {
            "type": "text",
            "label": "Hostname",
            "hint": "The hostname for Keycloak frontend URL. Can use Runtipi domain variable",
            "required": false,
            "env_variable": "KEYCLOAK_HOSTNAME",
            "placeholder": "${APP_DOMAIN}"
        },
        {
            "type": "text",
            "label": "Timezone",
            "hint": "Container timezone (e.g., UTC, Europe/Warsaw)",
            "required": false,
            "env_variable": "TZ",
            "default": "UTC",
            "placeholder": "UTC"
        }
    ],
    "exposable": true,
    "no_gui": false,
    "supported_architectures": [
        "amd64",
        "arm64"
    ],
    "dynamic_config": true,
    "min_tipi_version": "4.6.5",
    "created_at": 1737295200000,
    "updated_at": 1737295200000
}