{
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "schemaVersion": 2,
    "services": [
        {
            "name": "ygege",
            "image": "ghcr.io/uwudev/ygege:0.8.0",
            "internalPort": 8715,
            "isMain": true,
            "environment": [
                {
                    "key": "YGG_USERNAME",
                    "value": "${YGEGE_USERNAME}"
                },
                {
                    "key": "YGG_PASSWORD",
                    "value": "${YGEGE_PASSWORD}"
                },
                {
                    "key": "BIND_IP",
                    "value": "0.0.0.0"
                },
                {
                    "key": "BIND_PORT",
                    "value": "8715"
                },
                {
                    "key": "LOG_LEVEL",
                    "value": "${YGEGE_LOG_LEVEL:-info}"
                }
            ],
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data/config",
                    "containerPath": "/config"
                }
            ],
            "healthCheck": {
                "test": "curl --fail http://localhost:8715/health || exit 1",
                "interval": "1m30s",
                "timeout": "20s",
                "retries": 3
            }
        }
    ]
}