{
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "schemaVersion": 2,
    "services": [
        {
            "name": "releasarr",
            "image": "makario1337/releasarr:latest",
            "isMain": true,
            "internalPort": 1337,
            "environment": [
                {
                    "key": "APP_PORT",
                    "value": "${RELEASARR_PORT:-1337}"
                },
                {
                    "key": "APP_WORKERS",
                    "value": "${RELEASARR_WORKERS:-4}"
                }
            ],
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data/config",
                    "containerPath": "/config"
                },
                {
                    "hostPath": "${APP_DATA_DIR}/data/logs",
                    "containerPath": "/logs"
                },
                {
                    "hostPath": "${APP_DATA_DIR}/data/import",
                    "containerPath": "/app/import"
                },
                {
                    "hostPath": "${APP_DATA_DIR}/data/library",
                    "containerPath": "/app/library"
                }
            ]
        }
    ]
}