{
    "$schema": "https://raw.githubusercontent.com/runtipi/runtipi-appstore/refs/heads/master/apps/dynamic-compose-schema.json",
    "services": [
      {
        "name": "web",
        "image": "ghcr.io/maybe-finance/maybe:0.5.0",
        "isMain": true,
        "internalPort": 3000,
        "volumes": [
          {
            "hostPath": "${APP_DATA_DIR}/data/storage",
            "containerPath": "/rails/storage"
          }
        ],
        "environment": {
          "POSTGRES_USER": "maybe",
          "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}",
          "POSTGRES_DB": "maybe",
          "SECRET_KEY_BASE": "${SECRET_KEY_BASE}",
          "SELF_HOSTED": "true",
          "RAILS_FORCE_SSL": "false",
          "RAILS_ASSUME_SSL": "false",
          "DB_HOST": "db",
          "DB_PORT": "5432",
          "REDIS_URL": "redis://redis:6379/1",
          "OPENAI_ACCESS_TOKEN": "${OPENAI_ACCESS_TOKEN}",
          "SYNTH_API_KEY": "${SYNTH_API_KEY}"
        },
        "dependsOn": {
          "db": {
            "condition": "service_healthy"
          },
          "redis": {
            "condition": "service_healthy"
          }
        }
      },
      {
        "name": "worker",
        "image": "ghcr.io/maybe-finance/maybe:0.5.0",
        "command": ["bundle", "exec", "sidekiq"],
        "dependsOn": {
          "redis": {
            "condition": "service_healthy"
          }
        },
        "environment": {
          "POSTGRES_USER": "maybe",
          "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}",
          "POSTGRES_DB": "maybe",
          "SECRET_KEY_BASE": "${SECRET_KEY_BASE}",
          "SELF_HOSTED": "true",
          "RAILS_FORCE_SSL": "false",
          "RAILS_ASSUME_SSL": "false",
          "DB_HOST": "db",
          "DB_PORT": "5432",
          "REDIS_URL": "redis://redis:6379/1",
          "OPENAI_ACCESS_TOKEN": "${OPENAI_ACCESS_TOKEN}",
          "SYNTH_API_KEY": "${SYNTH_API_KEY}"
        }
      },
      {
        "name": "db",
        "image": "postgres:16-alpine",
        "volumes": [
          {
            "hostPath": "${APP_DATA_DIR}/data/db",
            "containerPath": "/var/lib/postgresql/data"
          }
        ],
        "environment": {
          "POSTGRES_USER": "maybe",
          "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}",
          "POSTGRES_DB": "maybe"
        },
        "healthCheck": {
          "test": "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB",
          "interval": "5s",
          "timeout": "5s",
          "retries": 5
        }
      },
      {
        "name": "redis",
        "image": "redis:7-alpine",
        "volumes": [
          {
            "hostPath": "${APP_DATA_DIR}/data/redis",
            "containerPath": "/data"
          }
        ],
        "healthCheck": {
          "test": "redis-cli ping",
          "interval": "5s",
          "timeout": "5s",
          "retries": 5
        }
      }
    ]
  }
