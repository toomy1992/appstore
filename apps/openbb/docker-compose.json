{
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "schemaVersion": 2,
    "services": [
        {
            "name": "0",
            "image": "ghcr.io/openbb-finance/openbb-platform:1.5.6",
            "environment": [
                {
                    "key": "OPENBB_API_KEY",
                    "value": "${OPENBB_API_KEY}"
                },
                {
                    "key": "TZ",
                    "value": "${TZ}"
                },
                {
                    "key": "PUID",
                    "value": "1000"
                },
                {
                    "key": "PGID",
                    "value": "1000"
                }
            ],
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/data",
                    "containerPath": "/app/data",
                    "readOnly": false,
                    "shared": false,
                    "private": false
                }
            ]
        }
    ]
}